@inherits LayoutComponentBase


<div class="bg-success text-white p-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <span class="navbar-brand ml-2">Mobile Shop Administration</span>
            </div>
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-danger" href="/account/logout">Odjavi se</a>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row p-2">
        <div class="col-3">
            <div class="d-grid gap-1">
                <NavLink class="btn btn-outline-dark"
                        href="/admin/products"
                        ActiveClass="btn-success text-white"
                        Match="NavLinkMatch.Prefix">
                    Proizvodi
                </NavLink>
                <NavLink class="btn btn-outline-dark"
                        href="/admin/orders"
                        ActiveClass="btn-success text-white"
                        Match="NavLinkMatch.Prefix">
                    Porudzbine
                </NavLink>
            </div>
        </div>
        <div class="col">
            @Body
        </div>
    </div>
</div>
